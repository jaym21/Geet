<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSongNotificationLayout"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivSongImageNotificationExpand"
        android:layout_width="124dp"
        android:layout_height="124dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/tvSongTitleNotificationExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Abcd"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:fontFamily="@font/inter_medium"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />

        <TextView
            android:id="@+id/tvArtistNameNotificationExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Xyz"
            android:textColor="@color/black_alpha_85"
            android:textSize="12sp"
            android:fontFamily="@font/inter_regular"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPreviousNotificationExpand"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_skip_previous"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivPlayNotificationExpand"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_pause"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/ivNextNotificationExpand"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_skip_next"
                app:tint="@color/black" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>