<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <dev.jaym21.geet.widgets.BottomSheetLayout
        android:id="@+id/bottomSheetLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/home_nav_host"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:navGraph="@navigation/nav_home"
            tools:layout="@layout/fragment_home" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/playbackBarFragment"
            android:name="dev.jaym21.geet.ui.nowplaying.PlaybackBarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nowPlayingFragment"
            android:name="dev.jaym21.geet.ui.nowplaying.NowPlayingFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </dev.jaym21.geet.widgets.BottomSheetLayout>

</FrameLayout>