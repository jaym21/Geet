<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NoPermissionActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/llTopMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/ivStoragePermission"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oops..."
            android:textSize="14sp"
            android:textColor="@color/white_alpha_85"
            android:fontFamily="@font/inter_medium"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage access not available"
            android:textSize="15sp"
            android:textColor="@color/white_alpha_85"
            android:fontFamily="@font/inter_medium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivStoragePermission"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_storage_permission"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivStoragePermission"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant storage permissions to Skanner"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white_alpha_90"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from settings and restart application"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/white_alpha_90"
            android:lines="2"/>

    </LinearLayout>

</RelativeLayout>