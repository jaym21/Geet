<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.BottomSheetFragment">

    <ImageView
        android:id="@+id/ivArtworkBottomSheet"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="@drawable/artwork_rounded_corners"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    
    <TextView
        android:id="@+id/tvSongNameBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Song Name"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/inter_semibold"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/ivArtworkBottomSheet"
        app:layout_constraintStart_toEndOf="@id/ivArtworkBottomSheet"
        app:layout_constraintEnd_toStartOf="@id/ivPlayPauseBottomSheet"/>

    <TextView
        android:id="@+id/tvSongArtistBottomSheet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Artist Name"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:maxLines="1"
        android:fontFamily="@font/inter_medium"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSongNameBottomSheet"
        app:layout_constraintStart_toEndOf="@id/ivArtworkBottomSheet"
        app:layout_constraintEnd_toStartOf="@id/ivPlayPauseBottomSheet"/>
    
    <ImageView
        android:id="@+id/ivPlayPauseBottomSheet"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_play"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>